[grep]
	lineNumber = true
	extendRegexp = true
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8
[remote "origin"]
	push = HEAD
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[diff-so-fancy]
	stripLeadingSymbols = false
