#function
function cdcls(){
    cd "$@";clear
}
function mkcd(){
    mkdir -p "$@";cd "$@";clear
}
function adblog(){
    adb logcat -c
    suffix=`date +%F-%H-%M-%S`
    adb logcat -v threadtime | tee $suffix.log
}
function greps(){
    grep -nrHi "$@" .
}

#alias
