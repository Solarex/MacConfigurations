#function
function cdcls(){
    cd "$@";clear
}
function mkcd(){
    mkdir -p "$@";cd "$@";clear
}
function adblog(){
    adb logcat -c
    suffix=`date +%F-%H-%M-%S`
    adb logcat -v threadtime | tee $suffix.log
}
function greps(){
    #grep -nrHi "$@" .
    grep -i --color=auto -nrHi --exclude-dir={.git,.svn,lib,.gradle,.idea,captures,build,bin,gen} --exclude={*.png,*.jpg,*.jar,*.webp,*.bmp,*.svg} -E "$@" .
}
function md() {
    open -a typora "$@"
}

